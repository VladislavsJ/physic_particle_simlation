{
    "version": 3,
    "configurePresets": [
        {
            "name": "linux-gcc",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_C_COMPILER": "/usr/bin/gcc"
            }
        }
    ]
}